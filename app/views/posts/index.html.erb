<h1>Posts</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Post Date</th>
      <th>Rationale</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.date %></td>
      <td><%= truncate(post.rationale) %></td>
      <td><%= post.user.full_name if post.user %></td>
    </tr>
  <% end %>
  </tbody>
</table>